<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.UserDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/img_close"
            android:layout_width="48dp"
            android:layout_height="56dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/baseline_close_24" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/img_avatar"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_below="@+id/img_close"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            app:civ_border_color="#FF000000" />

        <TextView
            android:id="@+id/txt_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/img_avatar"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="8dp"
            android:text="Name"
            android:textSize="28sp" />

        <TextView
            android:id="@+id/txt_bio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txt_name"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="16dp"
            android:textSize="30sp" />

        <View
            android:id="@+id/view_divider"
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/txt_bio"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:background="#b2b2b2" />


        <RelativeLayout
            android:id="@+id/layout_person_info"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/view_divider"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical">

            <ImageView
                android:id="@+id/img_person"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_person_24" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/img_person"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/txt_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="8dp"
                    android:text="Name"
                    android:textColor="@android:color/primary_text_light"
                    android:textSize="20sp" />


                <TextView
                    android:id="@+id/txt_site_admin"
                    android:layout_width="68dp"
                    android:layout_height="24dp"
                    android:background="@drawable/rounded_blue_background"
                    android:gravity="center"
                    android:text="STAFF"
                    android:textColor="@android:color/primary_text_dark"
                    android:textSize="16sp" />

            </LinearLayout>
        </RelativeLayout>


        <RelativeLayout
            android:id="@+id/layout_location"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/layout_person_info"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_location"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_location_on_24" />

            <TextView
                android:id="@+id/txt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/img_location"
                android:text="Location"
                android:textColor="@android:color/primary_text_light"
                android:textSize="20sp" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/layout_blog"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_below="@+id/layout_location"
            android:layout_marginLeft="16dp"
            android:layout_marginRight="16dp"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_blog"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerVertical="true"
                android:src="@drawable/baseline_link_24" />

            <TextView
                android:id="@+id/txt_blog"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginBottom="8dp"
                android:layout_marginLeft="32dp"
                android:layout_toRightOf="@+id/img_blog"
                android:text="Location"
                android:textColor="@android:color/holo_blue_dark"
                android:textSize="20sp" />

        </RelativeLayout>

    </RelativeLayout>


</ScrollView>